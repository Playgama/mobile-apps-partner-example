<?xml version="1.0" encoding="utf-8"?>
<!-- ========================================================================
     themes.xml
     Темы оформления приложения
     ======================================================================== -->

<resources>

    <!-- ================================================================
         Основная тема приложения (без ActionBar — используем Toolbar)
         ================================================================ -->
    <style name="Theme.PlaygamaGames" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary цвет -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@android:color/white</item>
        
        <!-- Secondary цвет -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@android:color/black</item>
        
        <!-- Фон -->
        <item name="android:colorBackground">@android:color/white</item>
        
        <!-- Статус-бар -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
    </style>

    <!-- ================================================================
         Тема для экрана игры (с верхней панелью Exit)
         ================================================================ -->
    <style name="Theme.PlaygamaGames.Fullscreen" parent="Theme.PlaygamaGames">
        <!-- Без ActionBar — используем свою панель -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        
        <!-- НЕ полноэкранный — показываем статус-бар -->
        <item name="android:windowFullscreen">false</item>
        
        <!-- Тёмный фон и статус-бар -->
        <item name="android:windowBackground">@android:color/black</item>
        <item name="android:statusBarColor">@android:color/black</item>
    </style>

</resources>
